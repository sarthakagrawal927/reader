{
  "name": "web-annotator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n app,cli -c cyan,magenta \"npm:dev:app\" \"npm:cli-bridge\"",
    "dev:app": "next dev --hostname 127.0.0.1 --port 3000",
    "cli-bridge": "node ../cli-bridge/index.mjs",
    "dev:with-cli": "npm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "engines": {
    "node": "24.x"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.43",
    "@ai-sdk/google": "^3.0.29",
    "@ai-sdk/openai": "^3.0.28",
    "@ai-sdk/react": "^3.0.86",
    "@mozilla/readability": "^0.6.0",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.11",
    "ai": "^6.0.84",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.0",
    "eventsource-parser": "^3.0.6",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "linkedom": "^0.18.12",
    "lucide-react": "^0.469.0",
    "next": "^16.0.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-draggable": "^4.5.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "rrweb": "^2.0.0-alpha.4",
    "rrweb-player": "^1.0.0-alpha.4",
    "sanitize-html": "^2.17.0",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sanitize-html": "^2.16.0",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
