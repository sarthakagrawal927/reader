{
  "name": "web-annotator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "install-browsers": "playwright install --with-deps chromium"
